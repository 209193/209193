CPPFLAGS= -std=gnu++11 -c -g -Iinc -Wall -pedantic
__start__: program
	$(MAKE) -C generate
	./program < generate/data.txt

program: obj/main.o obj/benchmark.o obj/algorithm1.o
	g++ -Wall -pedantic -o program obj/main.o obj/benchmark.o obj/algorithm1.o

obj/main.o: src/main.cpp inc/benchmark.hh inc/algorithm1.hh
	g++ ${CPPFLAGS} -o obj/main.o src/main.cpp

obj/algorithm1.o: src/algorithm1.cpp inc/algorithm1.hh
	g++ ${CPPFLAGS} -o obj/algorithm1.o src/algorithm1.cpp

obj/benchmark.o: src/benchmark.cpp inc/benchmark.hh
	g++ ${CPPFLAGS} -o obj/benchmark.o src/benchmark.cpp

clean:
	rm -f generate/*.txt generate/*.o generate/generate obj/*.o program
